<Window x:Name="window" x:Class="MyBindingSimpleClassCollections.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyBindingSimpleClassCollections"
        mc:Ignorable="d"
        Title="Personal data" Height="400" Width="300">
    <Grid x:Name="grid">
        <Grid Margin="20,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Первая строка с тремя элементами -->
            <Grid Grid.Row="0" Margin="0,30, 0,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="First Name:" Grid.Row="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtFirstName" TextWrapping="Wrap" Text="" Grid.Row="1" VerticalAlignment="Center" BorderThickness="2,2,2,2" BorderBrush="#FFD9D9D9"/>
            </Grid>

            <!-- Вторая строка с тремя элементами -->
            <Grid Grid.Row="1" Margin="0,30, 0,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="Last Name:" Grid.Row="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtLastName" TextWrapping="Wrap" Text="" Grid.Row="1" VerticalAlignment="Center" BorderThickness="2,2,2,2" BorderBrush="#FFD9D9D9"/>
            </Grid>

            <!-- Третья строка с тремя элементами -->
            <Grid Grid.Row="2" Margin="0,30, 0,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="Full name (updated automatically): " Grid.Row="0" VerticalAlignment="Center"/>
                <TextBlock TextWrapping="Wrap" Text="" Grid.Row="1" VerticalAlignment="Center" Background="#FFC9C9C9"/>
            </Grid>
        </Grid>
    </Grid>
</Window>