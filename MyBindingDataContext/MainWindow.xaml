<Window x:Class="MyBindingDataContext.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyBindingDataContext"
        mc:Ignorable="d"
        Title="Collection of people" Height="600" Width="800" >
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель - Ввод данных -->
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Label Content="Добавление человека:" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <TextBlock Text="Имя:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtFirstName" Height="25" Margin="0,0,0,15" FontSize="14"/>
            <TextBlock Text="Фамилия:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLastName" Height="25" Margin="0,0,0,15" FontSize="14"/>
            <Button x:Name="btnAddPerson" Content="Добавить в коллекцию" Height="30" FontSize="12" Margin="0,0,0,15" Click="btnAddPerson_Click" >
            </Button>
            <Button Content="Очистить поля" Margin="0,0,0,15" Height="30" Click="ClearPersonFields_Click" />
        </StackPanel>

        <!-- Центральная панель - Список людей -->
        <StackPanel Grid.Row="0" Grid.Column="2" Grid.RowSpan="2">
            <TextBlock Text="Список людей:" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
            <ListBox x:Name="lstPeople" Height="200" Margin="0,0,0,10" SelectionChanged="lstPeople_SelectionChanged" MouseDoubleClick="lstPeople_MouseDoubleClick"/>
            <Button x:Name="btnRemovePerson"
                Content="Удалить выбранного"
                Height="30" FontSize="12"
                Click="btnRemovePerson_Click"/>
        </StackPanel>

        <!-- Нижняя панель - Отображение выбранного человека -->
        <Border Grid.Row="1" Grid.Column="0" Background="#f5f5f5" BorderBrush="#ddd"
            BorderThickness="1" Padding="10">
            <StackPanel>
                <Label Content="Данные выбранного человека:" FontWeight="Bold" FontSize="14"
                    Margin="0,0,0,10"/>
                <TextBlock Text="Имя:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtSelectedFirstName"
                    Height="25" Margin="0,0,0,15" FontSize="14" IsReadOnly="True"
                    Background="#e8e8e8"/>
                <TextBlock Text="Фамилия:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtSelectedLastName"
                    Height="25" Margin="0,0,0,15" FontSize="14" IsReadOnly="True"
                    Background="#e8e8e8"/>
                <TextBlock Text="Полное имя:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock x:Name="txtSelectedFullName"
                    FontSize="14" FontWeight="Bold" Foreground="Blue" Margin="0,0,0,15"/>
                <Button Content="Очистить" Margin="0,0,0,15" Height="30"
                    Click="ClearSelectedPersonFields_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
