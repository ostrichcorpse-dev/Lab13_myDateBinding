<Window x:Class="MyBindingArgumentXAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyBindingArgumentXAML"
        mc:Ignorable="d"
        Title="XAML arguments binding" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <GroupBox Header="BindingArgumentXAML" Grid.Row="0">
            <StackPanel>
                <TextBox 
                    x:Name="tbxOutToLabel" 
                    TextWrapping="Wrap" 
                    Text="" 
                    Margin="10,10,10,10"/>
                <Label 
                    x:Name="lblOutput" 
                    Content="{Binding Text, ElementName=tbxOutToLabel}" 
                    VerticalAlignment="Top" 
                    Padding="10,10,10,10" 
                    Margin="5,5,5,5" 
                    FontWeight="Bold" BorderThickness="1,1,1,1" BorderBrush="Black"/>
                <Slider x:Name="tbxTextToSlider" Width="500" Maximum="1" Background="White" Foreground="White"/>
                <TextBox x:Name="sldrInput" TextWrapping="Wrap" Text="{Binding Value, ElementName=tbxTextToSlider, Mode=TwoWay, StringFormat=\{0:P0\}, UpdateSourceTrigger=PropertyChanged}" Margin="10,10,10,10"/>
            </StackPanel>
        </GroupBox>


        <GroupBox Header="Code-Behind" Grid.Row="1" BorderBrush="White" Foreground="#FF0E0E0E" Background="#FFE0E0E0">
            <StackPanel Grid.Row="1" Tag="">
                <TextBox x:Name="SourceTextBox" TextWrapping="Wrap" Text="" Margin="10,10,10,10"/>
                <Label x:Name="TargetTextBlock" Content="" Padding="10,10,10,10" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="1,1,1,1"/>
                <Slider x:Name="OutputSlider" Width="500" Maximum="1"/>
                <TextBox x:Name="InputTextBox" TextWrapping="Wrap" Text="" Margin="5,5,5,5"/>
            </StackPanel>
        </GroupBox>


    </Grid>
</Window>
